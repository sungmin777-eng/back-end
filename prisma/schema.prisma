
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"              // 또는 "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  unitPrice Int
  unit      String
  createdAt DateTime @default(now())
  sales     Sale[]
}

model Customer {
  id        Int       @id @default(autoincrement())
  name      String
  phone     String    @unique
  memo      String?
  createdAt DateTime  @default(now())
  sales     Sale[]
}

model Sale {
  id         Int       @id @default(autoincrement())
  date       DateTime
  productId  Int
  quantity   Int
  totalPrice Int
  customerId Int?
  product    Product   @relation(fields: [productId], references: [id])
  customer   Customer? @relation(fields: [customerId], references: [id])
}
 model Post {
   id        Int      @id @default(autoincrement())
   title     String
   content   String
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
 }